@model TukTuk.Models.PasteModel
@{
    ViewBag.Title = "Home Page";
}

<html>
<head>
    @Styles.Render("~/Content/css")
</head>
<body class="text-center">

    <div class="container">
        <div class="page-header">
            <h1>Command Expressions</h1>
        </div>
        <div class="col-lg-6">
            @using (Html.BeginForm("Index", "Home", FormMethod.Post))
            {
                <div class="row">
                    <div class="form-group">
                        @Html.Label("Paste text here")
                        @Html.TextAreaFor(m => m.Paste, new { @class = "textbox well", cols = "80", rows = "20" })
                    </div>
                    <div class="form-group">
                        @{if (ViewBag.error != null)
                            {
                        <div class="text-danger">@ViewBag.error</div>
                            }
                            }
                        @Html.Label("Enter your commands")

                        @Html.TextAreaFor(m => m.Command, new { @class = "textbox", cols = "40", rows = "4" })

                        <button type="submit" class="btn btn-primary">Submit <span class="glyphicon glyphicon-cloud-upload"></span></button>

                    </div>
                </div>
                }
        
        </div>
        

        <div class="col-lg-6">
        @{
           
            if (Session["result"] != null)
            {
                <textarea cols="80" rows="20">
                    @foreach (string data in (IList<string>)Session["result"])
                    {
                        @Html.Raw(data)


                    }
                </textarea>
            }

        }
        </div>
    </div>

 

    

</body>
    </html> 